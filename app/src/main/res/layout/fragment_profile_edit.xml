<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_editpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Back"
        android:src="@drawable/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/image_profile_edit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/image_profile_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_camera"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Chọn ảnh đại diện"
        android:scaleType="centerInside"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile_edit"
        app:layout_constraintEnd_toEndOf="@+id/image_profile_edit"
        app:layout_constraintStart_toStartOf="@+id/image_profile_edit"
        app:layout_constraintTop_toTopOf="@+id/image_profile_edit" />

    <TextView
        android:id="@+id/text_username_profile_edit"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="44dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:paddingStart="10dp"
        android:text="@string/text_profile_edit"
        android:textAppearance="@style/text_dangnhap"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_edit"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/input_username_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/input_username"
        android:hint="Phan Công Phước"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_edit" />

    <TextView
        android:id="@+id/text_email_profile_edit"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:paddingStart="10dp"
        android:text="@string/text_profile_edit"
        android:textAppearance="@style/text_dangnhap"
        app:layout_constraintTop_toBottomOf="@+id/input_username_edit"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/input_email_profile_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input_username"
        android:hint="@string/text_email_profile"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_email_profile_edit" />
    <Button
        android:id="@+id/button_save_edit"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="148dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/white"
        android:clipToOutline="true"
        android:contentDescription="Lưu"
        android:text="Luưu"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_email_profile_edit"
        app:layout_constraintVertical_bias="1.0">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>